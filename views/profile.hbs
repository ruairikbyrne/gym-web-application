{{> menu id="profile"}}

<form class="ui stacked segment form" action="/updateprofile" method="POST">
  <h3 class="ui header">Member Details</h3>
  <div class="two fields">
    <div class="field">
      <label>Name</label>
      <input placeholder="Name" type="text"  name="name" value={{memberName}}>
    </div>
  </div>
  <div class="field">
    <label>Email</label>
    <input placeholder="email" type="text" name="email" value = {{email}}>
  </div>
  <div class="field">
    <label>Password</label>
    <input placeholder="Password" type="text" name="password" value = {{password}}>
  </div>
      <div class="field">
      <label>Address</label>
      <input placeholder="Address" type="text"  name="address" value = {{address}}>
    </div>
    <div class="field">
      <label>Gender</label>
      <input placeholder="Gender" type="text"  name="gender" value = {{gender}}>
    </div>
    <div class="field">
      <label>Height</label>
      <input placeholder="Height" type="text"  name="height" value = {{height}}>
    </div>
    <div class="field">
      <label>Starting Weight</label>
      <input placeholder="Starting Weight" type="text"  name="weight" value = {{startingWeight}}>
    </div>

  <button class="ui blue submit button">Update</button>
</form>